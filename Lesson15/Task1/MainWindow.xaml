<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">
    <Grid>
        <Canvas>
            <Button x:Name="connectDatabase" Content="ConnectDB" IsDefault="True" Click="ConnectDatabaseButton_ClickAsync" Canvas.Top="150" Canvas.Left="180"/>
            <Button x:Name="disconnectDatabase" Content="DisconnectDB" IsCancel="True" Click="DisconnectDatabaseButton_ClickAsync" Canvas.Top="150" Canvas.Right="180"/>
            <TextBox x:Name="textBox" Width="157" Canvas.Top="77" Canvas.Right="180" Height="71" Canvas.Left="180"/>
        </Canvas>
    </Grid>
</Window>
